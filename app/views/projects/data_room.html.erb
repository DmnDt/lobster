        <%# <p>Product description with <strong>relevant info</strong> only.</p> %>
      </div>
    </div>
  <% end %>
  <% if (current_user == @project.investee.user )%>
    <%= simple_form_for(@project) do |f| %>
      <%= f.input :documents, as: :file, input_html: { multiple: true } %>
      <%= f.button :submit, "Submit" %>
    <% end %>
  <% end %>
</div>

