<div class="colonne">
  <h1>Entrez dans la caverne d'Alibaba 💍</h1>
  <div class="data">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="container">
        <div class="container-data">
          <div class="form-inputs mt-5">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        label:false,
                        placeholder:"Email",
                        input_html: { class:"form-api", autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        label:false,
                        placeholder:"Mot de passe",
                        input_html: { class:"form-api", autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :submit, "Log in", class: 'btn btn-flat1'  %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="devise-form">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
