<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-fixed <%= action_name == "home" ? "bg-transparent" : ""  %>">
  <a class="navbar-brand" href="#">
    <%= image_tag "Icone-Rbnb-PhotoRoom.png" %>
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>



  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%if user_signed_in? %>
          <%=link_to current_user.email, "#", class:"nav-link" %>
        <% end %>
      </li>
      <li class="nav-item active">
        <%= link_to "Home", root_path, class:"nav-link" %>
      </li>
      <li class="nav-item">
        <% if user_signed_in? %>
         <%= link_to "Bookings", dashboard_path, class:"nav-link" %>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://cdn3.iconfinder.com/data/icons/diversity-avatars/64/catholic-nun-white-512.png" />
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in?%>
            <%= link_to "Sign out", destroy_user_session_path(current_user), method: :delete, class:"dropdown-item" %>
          <%else%>
            <%= link_to "Sign in", new_user_session_path,  class:"dropdown-item" %>
          <%end %>
        </div>
      </li>
    </ul>
  </div>
</div>
