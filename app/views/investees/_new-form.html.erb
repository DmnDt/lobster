        <div class="fin"><h5>%</h5> <%= f.input :taux_marge_EBITDA, label: false, input_html: { class:"form-api", data: { fill_target: "tauxMargeEbitda" } } %></div>
      </div>
    </div>
  </div>
  <%= f.input :api_data, label: false, input_html: { data: { fill_target: "apiData" }, class: 'd-none' } %>
  <div class="button-figures">
    <%= f.button :submit, "Valider", class: 'btn btn-flat1'  %>
  </div>
